{
  "manifest_version": 3,
  "name": "ChromaTranslator-彩译",
  "version": "1.0.0",
  "description": "ChromaTranslator - 多彩翻译工具：支持输入框翻译、选中文本翻译和网页全文翻译，使用Chrome内置AI提供高质量翻译服务",
  "author": "zhangjh",
  "homepage_url": "https://github.com/zhangjh/chroma-translator",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [],
  "action": {
    "default_popup": "dist/popup/popup.html",
    "default_title": "ChromaTranslator - 彩译"
  },
  "background": {
    "service_worker": "dist/src/background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "dist/src/content/content-bundled.js"
      ],
      "css": [
        "src/content/content.css"
      ],
      "run_at": "document_idle",
      "all_frames": true,
      "match_about_blank": true
    }
  ],
  "options_page": "src/options/options.html",
  "icons": {
    "16": "src/icons/translate_16.png",
    "32": "src/icons/translate_32.png",
    "48": "src/icons/translate_48.png",
    "128": "src/icons/translate_128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; font-src 'self';"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "dist/content/content.css",
        "dist/icons/translate_16.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "minimum_chrome_version": "88"
}